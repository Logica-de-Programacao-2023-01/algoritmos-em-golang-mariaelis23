q4

var peso, altura float64
	fmt.Print("Me informe seu peso e sua altura: ")
	fmt.Scan(&peso)
	fmt.Scan(&altura)
	quadrado := altura * altura
	imc := peso / quadrado
	fmt.Println("O seu IMC é: ", imc)
}


