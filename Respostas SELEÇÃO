q8

var x int
	fmt.print("Me informe um número de 1 a 7")
	fmt.Scan(&x)
	if x == 1 {
	return fmt.print("Domingo")}
	if x == 2 {
	return fmt.print("Segunda-feira")}
        if x == 3 {
	return fmt.print("Terça-feira")}
	if x == 4 {
	return fmt.print("Quarta-feira")}
	if x == 5 {
	return fmt.print("Quinta-feira")}
	if x == 6 {
	return fmt.print("Sexta-feira")}
	if x == 7 {
	return fmt.print("Sábado")}
}


